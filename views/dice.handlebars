 <!-- body  -->
<div id="diceBody_container" class="container">
  	<table class="table" cellspacing="0" cellpadding="0" width="100%" style="height:300px; overflow-x: hidden;">
		<colgroup>
			<col width="90px">
			<col>
			<col width="120px">
		</colgroup>
		<thead>
			<tr>
				<th scope="col">시간</th>
				<th scope="col">결과</th>
				<th scope="col">복사</th>
			</tr>
		</thead>
		<tbody id="diceList_container" style="font-size:12px">
        {{#each logList}}
            <tr>
                <td>{{date}}</td>
                <td>{{result}}</td>
                <td><button class="btn btn-default" data-copy="{{data}}: {{result}}">클립보드로 복사</button></td>
            </tr>
        {{/each}}
        </tbody>
	</table>
    <form class="form-inline">
        <h4><strong>캐릭이름</strong></h4>
        <input id="char_input" class="form-control form-inline" style="width:150px" placeholder="입력 안하면 익명">
        <br>
    </form>
    <div id="message_container" class="form-group">
        <h4><strong>그냥 메시지</strong></h4>
        <input id="message_body" class="form-control form-inline" style="width:150px" placeholder="메시지는 500자까지">
        <button type="button" class="btn btn-default">보내기</button>
    </div>
	<div id="diceRoll_container" class="btn-group">
        <h4><strong>주사위</strong></h4>
        <button type="button" data-dicetype="fixed" data-number="100" class="btn btn-default diceRoll_btn">1d100</button>
        <button type="button" data-dicetype="fixed" data-number="6" class="btn btn-default diceRoll_btn">1d6</button>
        <button type="button" data-dicetype="fixed" data-number="10" class="btn btn-default diceRoll_btn">1d10</button>
        <button type="button" data-dicetype="fixed" data-number="4" class="btn btn-default diceRoll_btn">1d4</button>
        <button type="button" data-dicetype="fixed" data-number="3" class="btn btn-default diceRoll_btn">1d3</button>
        <button type="button" data-dicetype="fixed" data-number="2" class="btn btn-default diceRoll_btn">1d2</button>
        <br>
        <form class="form-inline">
            <div class="form-group">
                <span style="padding-right:10px">1d</span>
                <input id="dice_input" class="form-control form-inline" style="width:150px" placeholder="입력 안하면 100">
                <button type="button" data-dicetype="user" class="btn btn-default diceRoll_btn">굴리기</button>
            </div>
        </form>
	</div>
	<br>
	<br>
	<form id="randomArray_container" class="form-inline">
        <h4><strong>1~숫자까지 랜덤배열</strong></h4>
        <div id="randomArray_fromone"></div>
		<br>
		<br>
        <h4><strong>숫자~숫자까지 랜덤배열</strong></h4>
        <div id="randomArray_fromnumber"></div>
	</form>
</div> 
